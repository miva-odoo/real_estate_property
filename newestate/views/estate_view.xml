  <record id="estate_property_type_tree" model="ir.ui.view">
    <field name="name">estate property type Name</field>
    <field name="model">property.type</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name= "offers"/>
      </tree>
    </field>
  </record>

  <record id="estate_property_form" model="ir.ui.view">
    <field name="name">estate property</field>
    <field name="model">estate.properties</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button name="action_sold" type="object" string="Sold" attrs="{'invisible': [('state','=', 'sold')]}"/>
          <button name="action_cancel" type="object" string="Cancel" ttrs="{'invisible': [('state','=', 'cancel')]}"/>
          <field name="state" widget="statusbar"/>
        </header>
        <sheet>
          <group>
            <field name="name"/>
          </group>
          <group>
            <group>
              <field name="property_type_id"/>
              <field name="current_user"/>
              <field name="property_tag_id" widget="many2many_tags" options="{'color_field':'color'}"/>
            </group>
            <group>
              <field name="image" widget="image" class="oe_avatar"/>
            </group>
            <group>
              <field name="postcode"/>
              <field name="date_availability"/>
              <field name="best_offer"/>
            </group>
            <group>
                <field name="salesman_id"/>
                <field name="buyer_id" domain="[('is_buyer', '=', 'true')]"/>
            </group>
          </group>
          <notebook>
            <page string="Description">
              <group>
                <field name="description"/>
              </group>
            </page>
            <page string="Property Details">
              <group>
                <field name="bedrom"/>
                <field name="expected_price"/>
                <field name="selling_price"/>
                <field name="living_area"/>
                <field name="garden_area"/>
                <field name="total_area"/>
              </group>

              <group>
                <field name="garage"/>
                <field name="facades"/>
                <field name="garden"/>
                <field name="garden_orientation"/>
              </group>
            </page>
            <page name="offers" string="offers">
              <group>
                <field name="offer_ids">
                  <tree editable="True">
                    <field name="partner_id"/>
                    <field name="price"/>
                    <field name="status"/>
                    <button type="object" string="accepted" name="action_accepted" icon="fa-check" attrs="{'invisible': [('parent.state','=', 'cancel')]}"/>
                    <button type="object" string="Rejected" name="action_rejected" icon="fa-close" attrs="{'invisible': [('parent.state','=', 'cancel')]}"/>
                  </tree>
                </field>
              </group>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

