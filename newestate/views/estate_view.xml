  <record id="estate_property_offer_tree" model="ir.ui.view">
        <field name="name">Estate Property Offer</field>
        <field name="model">estate.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="status" decoration-success="status=='accepted'" decoration-danger="status=='rejected'"/>
            </tree>
        </field>
  </record>
    <!-- Form view for offer -->
  <record id="estate_property_offer_form" model="ir.ui.view">
        <field name="name">Estate Property Offer Form</field>
        <field name="model">estate.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <kanban>
                        <group>
                            <field name="price"/>
                            <field name="partner_id" domain="[('is_buyer','=',True)]"/>
                            <field name="status"/>
                        </group>
                    </kanban>
                </sheet>
            </form>
        </field>
  </record>

