    <template id="property_call" name="Property">

        <t t-call="website.layout">
            <div class="container">
                <h3 class="text-center">Real Estate Properties</h3>
                <table class="table table-bordered mb64">
                    <thead>
                        <tr>
                            <th class="text-center">Sr.No</th>
                            <th class="text-center">Property Name</th>
                            <th class="text-center">Description</th>
                        </tr>
                    </thead>

                    <tbody>
                        <t t-set="seq" t-value="1"/>
                        <t t-foreach="properties" t-as="property">

                        <tr>
                            <td>
                                <t t-out="seq"/>
                            </td>
                            <td>
                               
                                    <a t-att-href='"/estate/%s" %property.id'><t t-out="property.name"/></a>
                               
                            </td>

                            <td>
                                <t t-if="property.description" t-out="property.description"/>
                                <t t-else="">No Description Available</t>
                                <t t-out="property.property_type_id.name"/>
                            </td>


                        <t t-set="seq" t-value="seq+1"/>
                        </tr>
                        </t>
                    </tbody>
                    
                </table>
                <div class="row">
                    </div>
            </div>
        </t>
    </template>

    <template id="property_details" name="Property_Details">
        <div t-call="website.layout">
        <div class="container">

           <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img-top" alt="..."/>
                    <div class="card-body">
                        <h5 class="card-title">Name:<span t-field="properties.name"/></h5>
                        <p class="card-text">Description:<span t-field="properties.description"/></p>
                        <p class="card-text">Postcode:<span t-field="properties.postcode"/></p>
                        <p class="card-text">Property Type:<span t-field="properties.property_type_id"/></p>
                        <p class="card-text">Expected Price:<span t-field="properties.expected_price"/></p>
                        <p class="card-text">Sales Person:<span t-field="properties.salesman_id"/></p>
                    </div>
                </div>
        </div>
        </div>
    </template>


    <template id="customize_property" name="Show Description" inherit_id="property_call" customize_show="True">
        <xpath expr="//div[contains(@class,'row')]" position="inside">
            <div t-field="property.description"/>
        </xpath>
    </template>

</odoo>